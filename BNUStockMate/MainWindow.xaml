<Window
    x:Class="BNUStockMate.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:contacts="clr-namespace:BNUStockMate.View.Contacts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:inventory="clr-namespace:BNUStockMate.View.Inventory"
    xmlns:local="clr-namespace:BNUStockMate"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:BNUStockMate.ViewModel"
    xmlns:view="clr-namespace:BNUStockMate.View"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance viewModel:MainViewModel}"
    mc:Ignorable="d">
    <Grid>


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            Text="{Binding ApplicationName}" />


        <TabControl
            Grid.Row="1"
            Margin="10"
            TabStripPlacement="Left">
            <TabItem Header="Inventory">
                <inventory:InventoryView DataContext="{Binding InventoryViewModel}" />
            </TabItem>
            <TabItem Header="Contacts Directory">
                <contacts:ContactsView DataContext="{Binding ContactsViewModel}" />
            </TabItem>
            <TabItem Header="Orders">
                <view:OrdersView DataContext="{Binding OrdersViewModel}"/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>